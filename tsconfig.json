{
  "compilerOptions": {
    // JSの変換系
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    // importまわり
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // 型チェックの厳しさ
    "strict": true,
    "skipLibCheck": true,
    // よく使う lib の型 (DOM操作や最新のES機能)
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // 便利系
    "noEmit": true,
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
